<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding5dp"
    android:orientation="vertical"

    tools:context=".activity.CityActivity">
    <TextView
        android:id="@+id/txtNameOfLocationDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/imgLocationDetails"
        app:layout_constraintStart_toStartOf="@id/imgLocationDetails"
        android:layout_marginLeft="@dimen/padding5dp"
        android:layout_marginBottom="@dimen/padding5dp"
        tools:text="Name"
        android:textSize="25sp"
        android:textColor="@color/white"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/imgLocationDetails"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnmarker"
        app:layout_constraintTop_toBottomOf="@id/imgLocationDetails"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="location"
        android:textSize="15sp"
        android:layout_gravity="center"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/txtDetailLocationOfCity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#0E0E0E"
        android:text="dfsdfdsfj"
        app:layout_constraintTop_toBottomOf="@id/btnmarker"
        app:layout_constraintStart_toStartOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>